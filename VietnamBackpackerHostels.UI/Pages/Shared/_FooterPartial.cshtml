@model VietnamBackpackerHostels.UI.Pages.Shared.FooterPartialModel
@using ProjectBase.Core.Utils

<footer class="bg-black text-center text-white">
    <div class="container p-4">
        <section class="mb-4">
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.facebook.com/vietnambackpackerhostels" role="button">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.youtube.com/channel/UCtpYKc-XtNS1XkgFGIp-HCw" role="button">
                <i class="fab fa-youtube"></i>
            </a>
            <a class="btn btn-outline-light btn-floating m-1" href="https://www.instagram.com/vbh_vietnam" role="button">
                <i class="fab fa-instagram"></i>
            </a>
        </section>
        <section>
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5><a asp-page="/SleepAndEat/Index" class="text-white">Sleep & Eat</a></h5>

                    <ul class="list-unstyled mb-0">
                        @if (Model.HostelLocations.Any())
                        {
                            foreach (var hostelLocation in Model.HostelLocations)
                            {
                                var hostelLocationFriendlyUrl = hostelLocation.Name.UrlFriendly();
                                var friendlyUrl = $"/sleep-and-eat/{hostelLocationFriendlyUrl}";

                                <li>
                                    <a asp-page="/Hostel/Index" asp-route-category="@hostelLocationFriendlyUrl" class="text-white">@hostelLocation.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5><a class="text-white" asp-page="/Explore/Index">Explore</a></h5>

                    <ul class="list-unstyled mb-0">
                        @if (Model.TripLocations.Any())
                            {
                                foreach (var tripLocation in Model.TripLocations)
                                {
                                    var tripLocationFriendlyUrl = tripLocation.Name.UrlFriendly();
                                    var friendlyUrl = $"/explore/{tripLocationFriendlyUrl}";

                                <li>
                                    <a asp-page="/TripCategory/Index" asp-route-category="@tripLocationFriendlyUrl" class="text-white">@tripLocation.Name</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5><a asp-page="/Services/Index" asp-route-category="" class="text-white">Services</a></h5>

                    <ul class="list-unstyled mb-0">
                        <li>
                            <a class="text-white" asp-page="/Services/AirportTransfer/Index">Airport Transfer</a>
                        </li>
                        <li>
                            <a class="text-white" asp-page="/Services/VisaLetters/Index">Visa Letters</a>
                        </li>
                        <li>
                            <a class="text-white" asp-page="/Services/TravelInsurance/Index">Travel Insurance</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5><a href="/about-us" class="text-white">About Us</a></h5>

                    <ul class="list-unstyled mb-0">
                        <li>
                            <a class="text-white" asp-page="/AboutUs/CityGuides/Index">City Guides</a>
                        </li>
                        <li>
                            <a class="text-white" asp-page="/AboutUs/Community/Index">Community</a>
                        </li>
                        <li>
                            <a class="text-white" asp-page="/AboutUs/JoinOurCrew/Index">Join Our Crew</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
    <div class="text-center p-3 header-font bg-black mb-0">
        © @DateTime.Now.Year
        Vietnam Backpacker Hostels
    </div>
</footer>