@model List<VietnamBackpackerHostels.Core.Models.PageSection>

@{
    <div class="custom-height mt-n5 py-3 py-lg-5 bg-black">
        <div class="container py-5">
            <div class="row my-4">
                <div class="col-12" data-mdb-toggle="animation" data-mdb-animation-start="onLoad" data-mdb-animation="fade-in-left" data-mdb-animation-delay="200" data-mdb-animation-duration="800">
                    <h1 class="display-4 fw-bold ls-tight">@ViewData["Title"]</h1>
                    @if (ViewData["Subtitle"] != null)
                    {
                        <h4 class="mb-0 text-gray text-shadow-0">@ViewData["SubTitle"]</h4>
                    }
                </div>
            </div>
        </div>
    </div>

    if (Model.Any())
    {
        <!--Section: Locations-->
        <div class="container bg-white rounded-6 position-relative pt-3 px-3 custom-mt">

            @if (Model.Count > 0)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <partial name="_PageCardSectionPartial" model="Model[i]" />
                    if (i == 0 && Model.Count > 1)
                    {
                        <hr class="hr mb-2 mt-n1" />
                    }
                }
            }
        </div>
    }
}


